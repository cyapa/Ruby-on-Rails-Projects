<!-- New Sports Modal -->
<div class="modal fade" id="add-sport-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Paste the URL you want to add</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    
      <form action="/sports" method = "POST"> 
    <%=fo>
   
      <div class="modal-body">
      
      
      <div class="form-group">
    <label for="InputUrl">URL to Sport website</label>
    <input type="text" class="form-control" id="inputUrl" aria-describedby="textHelp" placeholder="Enter URL to the Sport" required>

  </div>
  <div class="form-group">
    <label for="InputPicUrl">Picture URL</label>
    <input type="text" class="form-control" id="inputPicUrl" placeholder="paste a URL to an image">
  </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Add</button>
      </div>
      </form>
    </div>
  </div>
</div>